@{
    ViewBag.Title = "login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/login.css">
    <link rel="icon" href="~/images/freepik-export-20240715061812u1zF.png">
</head>

<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <div class="container">
        <div class="welcome">
            <div class="bg"></div>
            <h1>Welcome Back</h1>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <h3>Login</h3>
            <label for="Email"><i class="fa-regular fa-envelope"></i>  Email</label>
            <input type="text" placeholder="info@example.com" id="Email" name="Email" required>
            <label for="password"><i class="fa-solid fa-lock"></i>  Password</label>
            <input type="password" placeholder="Password" id="password" name="password" required>
            <button type="submit">Login</button>
            <span>Did you forget your password? <a href="@Url.Action("forpass", "Account")"> Reset!</a></span>
            <br />
            <span>Don't you have account? <a href="@Url.Action("Signup", "Account")"> sign up</a></span>
        }

    </div>
</body>
<footer>
    <p>All rights reserved &copy; 2024 ICEAlex.</p>
</footer>
</html>